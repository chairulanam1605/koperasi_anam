extends ../layout/base 
block content 
	section.content-header 
		h1 
			| Edit Karyawan
		ol.breadcrumb 
			li 
				a(href='#') 
					i.fa.fa-dashboard
					| Daftar Karyawan
			li.active Edit Karyawan
	section.content
		.box
			.box-header.with-border
				h3.box-title
					| Karyawan
				.box-tools.pull-right
					button(type='button', data-widget='collapse', data-toggle='tooltip',title='collapse').btn.btn-box-tool
						i.fa.fa-minus
					
			.box-body
				form(role='form',method='post' action='/datakaryawan/edit/#{(id==undefined) ? data.id : id}')
					.row
						
						.col-xs-6
							.box-body
								- if (messages.msg_error) 
									.alert.alert-danger.alert-dismissable 
										button.close(type='button', data-dismiss='alert', aria-hidden='true') 
											| ×
										h4
											i.icon.fa.fa-ban
											| Alert! 
										| !{messages.msg_error}
								- if (messages.msg_info) 
									.alert.alert-success.alert-dismissable 
										button.close(type='button', data-dismiss='alert', aria-hidden='true') 
											| ×
										h4
											i.fa.fa-check
											| Success! 
										| !{messages.msg_info}
								.form-group
									label
										| Nama Karyawan
									input(type='text',value="#{data.nama_karyawan}",name='nama_karyawan',placeholder='Masukan Nama', autofocus).form-control
								.form-group
									label
										| Email
									input(type='text',value="#{ (email == undefined) ? data.email : email }",name='email',placeholder='Masukan Email').form-control
								.form-group
									label
										| No HP 
									input(type='text',value="#{ (no_hp == undefined) ? data.no_hp : no_hp }",name='no_hp',placeholder='Masukan Nomer Hp').form-control
								.form-group
									label
										| Alamat
									input(type='text',value="#{ (alamat == undefined) ? data.alamat : alamat }",name='alamat',placeholder='Masukan Alamat').form-control
							.box-footer
								input(type="hidden",name="_method", value="PUT")
								button(type='submit').btn.btn-success
									|  Edit
								a(href='/datakaryawan/karyawan').btn.btn-primary.pull-right
									| Kembali