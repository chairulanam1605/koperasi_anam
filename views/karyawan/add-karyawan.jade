extends ../layout/base
block content
    section.content-header
        h1
            | Tambah Karyawan
        ol.breadcrumb
            li
                a(href='#')
                    i.fa.fa-dashboard
                    | Karyawan
                li.active Tambah Karyawan
    section.content
        .box
            .box-header.with-border
                h3.box-title
                    | Karyawan
                .box-tools.pull-right
                    button(type='button', data-widget='collapse', data-toggle='tooltip',title='collapse').btn.btn-box-tool
                        i.fa.fa-minus

            .box-body
                form(role='form',method='post' action='/datakaryawan/add')
                    .row

                        .col-xs-6
                            .box-body
                                - if (messages.msg_error)
                                    .alert.alert-danger.alert-dismissable
                                        button.close(type='button', data-dismiss='alert', aria-hidden='true')
                                            | Ã—
                                        h4
                                            i.fa.fa-circle-exclamation
                                            | Alert!
                                        | !{messages.msg_error}
                                .form-group
                                    label
                                        | Nama Karyawan
                                    input(type='text',name='nama_karyawan',placeholder='Masukan Nama Karyawan', autofocus).form-control
                                .form-group
                                    label
                                        | Email
                                    input(type='text',name='email',placeholder='Masukan Email').form-control
                                .form-group
                                    label
                                        | No HP
                                    input(type='text',name='no_hp',placeholder='Masukan Nomer Hp').form-control
                                .form-group
                                    label
                                        | Alamat
                                    input(type='text',name='alamat',placeholder='Masukan Alamat').form-control
                            .box-footer
                                button(type='submit').btn.btn-success
                                    | Tambah

                                a(href='/datakaryawan').btn.btn-primary.pull-right
                                    | Kembali